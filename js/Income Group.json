{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 200,
  "width": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/GoSearchGoole/FIT3179-Data-Visualization-2/main/data/Income_Group.csv"
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2010,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2015,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Year == Year_selection"
    },
    {
      "aggregate": [
        {"op": "mean", "field": "Life Expectancy", "as": "avg_life_expectancy"}
      ],
      "groupby": ["Income Group"]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Income Group",
      "type": "ordinal",
      "title": "Income Group"
    },
    "y": {
      "field": "avg_life_expectancy",
      "type": "quantitative",
      "title": "Average Life Expectancy"
    },
    "tooltip": [
      {"field": "income_group", "title": "Income Group"},
      {"field": "avg_life_expectancy", "title": "Avg Life Expectancy"}
    ]
  }
}
